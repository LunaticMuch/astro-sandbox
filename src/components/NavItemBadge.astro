---
const { badge } = Astro.props;

let style = ''

switch (badge.variant) {
    case 'default': style = 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300'; break;
    case 'danger': style = 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300'; break;
    case 'note': style = 'bg-gray-100 text-gray-800 dark:bg-red-900 dark:text-red-300'; break;
    case 'success': style = 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300'; break;
    case 'caution': style = 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300'; break;
    case 'tip': style = 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:purple-red-300'; break;

}

---

 <span class={`text-xs font-medium mx-2 align-text-bottom uppercase px-1.5 py-0.5 rounded ${style}`}>{badge.text || ""}</span>

